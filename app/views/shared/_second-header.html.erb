<%# CSS・・・assets/stylesheets/shared/header.scss %>
<header>
  <nav class="navbar navbar-expand navbar-dark" style="background-color: #ec782b;">
    <%= link_to image_tag("logo_bg.png", class: "wt-icon"), root_path, class: 'navbar-brand' %>
    <div id="Navber">
      <%= search_form_for @p, url: companies_search_path, class: "d-flex" do |f| %>
        <%= f.text_field :name_or_name_kana_or_profile_cont, placeholder: "キーワードから探す", class: "search-input form-control me-2" %>
        <button class="search-button">
          <%= image_tag "search.png", class:"search-icon" %>
        </button>
      <% end %>
    </div>
  </nav>
</header>